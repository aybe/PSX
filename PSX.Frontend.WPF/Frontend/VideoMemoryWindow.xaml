<frontend:VideoMemoryWindowShim x:Class="PSX.Frontend.WPF.Frontend.VideoMemoryWindow"
                                x:ClassModifier="internal"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:frontend="clr-namespace:PSX.Frontend.WPF.Frontend"
                                mc:Ignorable="d"
                                Title="Video Memory"
                                d:DataContext="{d:DesignInstance frontend:VideoMemoryModel}"
                                d:DesignWidth="640"
                                d:DesignHeight="480"
                                WindowStartupLocation="{StaticResource DefaultWindowStartupLocation}"
                                Width="1024"
                                Height="512"
                                Background="GhostWhite">
    <Grid>
        <Border BorderBrush="Magenta"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Image Source="{Binding Bitmap}" />
        </Border>
    </Grid>
</frontend:VideoMemoryWindowShim>